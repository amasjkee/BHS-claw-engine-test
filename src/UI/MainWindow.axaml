<Window xmlns="https://github.com/avaloniaui"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        x:Class="BHS.Engine.UI.MainWindow"
        Title="BHS Claw Engine - Физическая Симуляция"
        Width="1000" Height="700"
        Background="Black">
    
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="*"/>
            <ColumnDefinition Width="250"/>
        </Grid.ColumnDefinitions>
        
        <!-- Левая панель - Игровая область -->
        <Border Grid.Column="0" 
                Background="Black" 
                BorderBrush="Gray" 
                BorderThickness="1"
                Margin="10">
            <Canvas Name="GameCanvas" 
                    Width="500" Height="500"
                    Background="Black"
                    PointerPressed="GameCanvas_PointerPressed">
                <Canvas.Styles>
                    <Style Selector="Canvas">
                        <Setter Property="Cursor" Value="Cross"/>
                    </Style>
                </Canvas.Styles>
            </Canvas>
        </Border>
        
        <!-- Правая панель - Управление -->
        <Border Grid.Column="1" 
                Background="White" 
                BorderBrush="LightGray" 
                BorderThickness="1"
                Margin="0,10,10,10"
                CornerRadius="5">
            <StackPanel Margin="15">
                
                <!-- Основные кнопки -->
                <StackPanel Margin="0,0,0,20">
                    <TextBlock Text="Управление" FontSize="14" FontWeight="Bold" Foreground="Black" Margin="0,0,0,10"/>
                    <UniformGrid Columns="2">
                        <Button Name="StartSimulationButton" 
                                Content="Запуск" 
                                Click="StartSimulationButton_Click"
                                Margin="2" Padding="8,5"
                                Background="Black" Foreground="White"/>
                        <Button Name="StopButton" 
                                Content="Стоп" 
                                Click="StopButton_Click"
                                Margin="2" Padding="8,5"
                                Background="Black" Foreground="White"/>
                        <Button Name="ResetButton" 
                                Content="Сброс" 
                                Click="ResetButton_Click"
                                Margin="2" Padding="8,5"
                                Background="Black" Foreground="White"/>
                    </UniformGrid>
                    <Button Name="RandomWallButton" 
                            Content="Добавить новую стену" 
                            Click="RandomWallButton_Click"
                            Margin="2,10,2,2" Padding="8,5"
                            Background="Black" Foreground="White"/>
                    <Button Name="HighSpeedButton" 
                            Content="Высокая скорость" 
                            Click="HighSpeedButton_Click"
                            Margin="2,10,2,2" Padding="8,5"
                            Background="Black" Foreground="White"/>
                </StackPanel>
                
                
                <!-- Настройки скорости -->
                <StackPanel Margin="0,0,0,20">
                    <TextBlock Text="Скорость" FontSize="14" FontWeight="Bold" Foreground="Black" Margin="0,0,0,10"/>
                    <Grid>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="Auto"/>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="Auto"/>
                        </Grid.ColumnDefinitions>
                        
                        <TextBlock Grid.Column="0" Text="Скорость:" VerticalAlignment="Center" Margin="0,0,5,0" Foreground="Black"/>
                        <Slider Grid.Column="1" Name="SpeedSlider" Minimum="1" Maximum="20" Value="10" 
                                Margin="0,0,10,0" TickFrequency="1" IsSnapToTickEnabled="True"/>
                        <TextBlock Grid.Column="2" Name="SpeedValueText" Text="10" 
                                   VerticalAlignment="Center" FontWeight="Bold" Foreground="Black"/>
                    </Grid>
                </StackPanel>
                
                <!-- Информационная панель -->
                <StackPanel>
                    <TextBlock Text="Информация о Симуляции" FontSize="14" FontWeight="Bold" Foreground="Black" Margin="0,0,0,10"/>
                    <Border Background="White" Padding="15" CornerRadius="5" BorderBrush="LightGray" BorderThickness="1">
                        <StackPanel>
                            <TextBlock Name="InfoText" 
                                       Text="Позиция шарика: (0, 0)&#x0a;Скорость шарика: (0, 0)&#x0a;Статус: Остановлено&#x0a;Столкновения: 0"
                                       FontFamily="Roboto Mono" FontSize="12" Foreground="Black" LineHeight="20"/>
                        </StackPanel>
                    </Border>
                </StackPanel>
            </StackPanel>
        </Border>
    </Grid>
</Window>
